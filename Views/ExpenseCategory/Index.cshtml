@model IEnumerable<ExpenseCategoryEntity>
@{
    ViewData["Title"] = "Listing of All Expense Catrgory";
}

<div>
    <div class="row pt-4">
        <div class="col-9">
            <h2 class="text-success">View Expense  Categories</h2>
        </div>
        <div class="col-3">
            <a asp-controller="ExpenseCategory" asp-action="Create" class="btn btn-primary">Add New Expenses Category</a>
        </div>
    </div>


<br />
@if (Model.Count() > 0)
{
    <table class="table table-bordered  table-hover table-striped" width="100%">
        <thead>
            <tr>
                
                <th>Expense Category Name</th>
               
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                   
                    <td width="20%">@item.ExpenseCateoryName</td>
          
                    <td width="30%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="ExpenseCategory" asp-action="GetExpCatDetailsForUpdate" asp-route-id="@item.ExpenseCateoryId" class="btn btnalert-primary mx-2">Update</a>
                            <a asp-controller="ExpenseCategory" asp-action="GetExpCatDetailsForDelete" asp-route-id="@item.ExpenseCateoryId" class="btn btnalert-danger mx-2">Delete</a>

                        </div>
                    </td>

                </tr>
            }
        </tbody>



    </table>
}
else
{
    <p class="text-center"><b>No  ExpenseCategory Created Yet</b></p>
}


</div>